{% set filterPath = filterPath | default(null) %}

{% if filterPath %}
    {% set categoryUrl = url(filterPath, {categoryPath: (categoryNode.url)}) %}
{% else %}
    {% set categoryUrl = categoryNode.url %}
{% endif %}

{% if categoryNode.parents is defined and categoryNode.parents is not empty %}
    {% include '@CatalogPage/_partials/category-breadcrumb.twig' with {categoryNode: categoryNode.parents|first, filterPath: filterPath} only %}
    <li>
        <a href="{{ categoryUrl }}">{{ categoryNode.name }}</a>
    </li>
{% endif %}
