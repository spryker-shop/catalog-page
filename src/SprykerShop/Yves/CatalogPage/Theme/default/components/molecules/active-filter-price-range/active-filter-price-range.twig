{% extends model('component') %}

{% define config = {
    name: 'active-filter-price-range'
} %}

{% define data = {
    filter: required,
    min: required,
    max: required,
    activeMin: required,
    activeMax: required,
    defaultMin: required,
    defaultMax: required,
} %}

{% set currentValue = data.activeMin | money  ~ ' - ' ~ data.activeMax | money %}

{% block component %}
    {% if app.request.query.has(data.filter.config.parameterName)
        and can('SeePricePermissionPlugin')
        and data.defaultMin != data.activeMin
        and data.defaultMax != data.activeMax
    %}
        {% include molecule('active-filter', 'CatalogPage') with {
            data: {
                filter: data.filter,
                value: currentValue
            }
        } only %}
    {% endif %}
{% endblock %}
