{% set activeFilters = '' %}
{% for filter in _view.data.facets %}
    {% set activeFilters = activeFilters ~ include([
        '@CatalogPage/_partials/active-filters/' ~ filter.config.name ~ '.twig',
        '@CatalogPage/_partials/active-filters/' ~ filter.config.type ~ '.twig',
    ], ignore_missing = true) %}
{% endfor %}

{% if activeFilters|trim is not empty %}
    <div class="callout active-filters">
        <div class="row">
            <div class="columns small-12 align-middle">
                <small class="active-filters__label">{{ 'catalog.filter.activeFilters' | trans }}:</small>
                {{ activeFilters | raw }}

                <a href="{{ generateUrlWithoutAllActiveSearchFilters(_view.data.facets) }}" class="alert button hollow small active-filters__filter">
                    {{ 'catalog.filter.resetAllFilters' | trans }}<i class="fa fa-close"></i>
                </a>
            </div>
        </div>
    </div>
{% endif %}
