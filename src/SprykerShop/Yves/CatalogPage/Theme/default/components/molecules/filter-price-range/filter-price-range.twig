{% extends molecule('filter-range', 'CatalogPage') %}

{% define config = {
    name: 'filter-price-range'
} %}

{% define data = {
    filterMin: required,
    filterActiveMin: required,
    filterMax: required,
    filterActiveMax: required
} %}

{% set min = (data.filterMin | default(0)) | moneyRaw | floor %}
{% set activeMin = (data.filterActiveMin | default(0)) | moneyRaw | floor %}
{% set max = (data.filterMax | default(0)) | moneyRaw | ceil %}
{% set activeMax = (data.filterActiveMax | default(0)) | moneyRaw | ceil %}
