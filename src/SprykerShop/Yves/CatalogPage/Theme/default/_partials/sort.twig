<div class="callout">
    <div class="row align-middle">

        <div class="large-12 xlarge-4 columns show-for-large">
            <strong>{{ _view.pagination.numFound }}</strong> {{ "catalog.itemsFound"|trans }}
        </div>

        <div class="small-12 medium-2 xlarge-2 columns">
            <label>
                <select name="ipp" class="__no-margin-bottom" data-default-value="{{ _view.pagination.config.defaultItemsPerPage }}" >
                    {% for limit in _view.pagination.config.validItemsPerPageOptions %}
                        <option value="{{ limit }}" {% if limit == _view.pagination.currentItemsPerPage %}selected{% endif %}>{{ limit }}</option>
                    {% endfor %}
                </select>
            </label>
        </div>

        <div class="small-8 medium-7 xlarge-4 columns">
            <label>
                <select name="sort" class="__no-margin-bottom" data-default-value="">
                    <option value="">{{ 'catalog.sort.relevance' | trans }}</option>
                    {% for sortParamName in _view.sort.sortParamNames %}
                        <option value="{{ sortParamName }}" {% if sortParamName == _view.sort.currentSortParam %}selected{% endif %}>{{ ('catalog.sort.' ~ sortParamName) | trans }}</option>
                    {% endfor %}
                </select>
            </label>
        </div>
        <div class="small-4 medium-3 xlarge-2 columns">
            <button type="submit" class="button hollow expanded __no-margin-bottom">
                <i class="fa fa-sort"></i> Sort
            </button>
        </div>
    </div>
</div>
