{% extends model('component') %}

{% define config = {
    name: 'active-filter-price-range'
} %}

{% define data = {
    filterMin: required,
    filterActiveMin: required,
    filterMax: required,
    filterActiveMax: required
} %}

{% set defaultValue = data.filterMin | money  ~ ' - ' ~ data.filterMax | money %}
{% set curentValue = data.filterActiveMin | money  ~ ' - ' ~ data.filterActiveMax | money %}

{% block component %}
    {% if defaultValue != curentValue %}
        {% include molecule('active-filter', 'CatalogPage') with {
            data: {
                filter: data.filter,
                value: curentValue
            }
        } only %}
    {% endif %}
{% endblock %}
