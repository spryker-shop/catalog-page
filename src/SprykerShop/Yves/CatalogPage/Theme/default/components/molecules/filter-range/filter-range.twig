{% extends model('component') %}

{% define config = {
    name: 'filter-range'
} %}

{% define data = {
    filterParameter: required,
    filterMin: required,
    filterActiveMin: required,
    filterMax: required,
    filterActiveMax: required
} %}

{% set min = min | default(data.filterMin) %}
{% set activeMin = activeMin | default(data.filterActiveMin) %}
{% set max = max | default(data.filterMax) %}
{% set activeMax = activeMax | default(data.filterActiveMax) %}

{% block body %}
    <div class="grid">
        <div class="col col--sm-6">
            <label>
                {{ 'catalog.filter.rangeFrom'|trans }}
                <input class="input"
                       type="number"
                       name="{{ data.filterParameter }}[min]"
                       value="{{ activeMin }}"
                       required="required"
                       min="{{ min }}"
                       max="{{ max }}"
                />
            </label>
        </div>

        <div class="col col--sm-6">
            <label>
                {{ 'catalog.filter.rangeTo'|trans }}
                <input class="input"
                       type="number"
                       name="{{ data.filterParameter }}[max]"
                       value="{{ activeMax }}"
                       required="required"
                       min="{{ min }}"
                       max="{{ max }}"
                />
            </label>
        </div>
    </div>
{% endblock %}
